
SHELL	:= /bin/bash

FC      := ifort
FFLAGS  :=  -I/gfra_user/store_0/usr/forair/LIB_INTEL/include
FFLAGS  += -openmp -free
LDFLAGS = -L/gfra_user/store_0/usr/forair/LIB_INTEL/lib


  FFLAGS      += 
  ifdef DEBUG
    FFLAGS    +=  -debug full
  else
    FFLAGS      += -Ofast
  endif



LDFLAGS += -lnetcdf  -lnetcdff 

EXEC    = wrf2farm.x
DEPEND  = depend.mk
SRC     = $(shell ls src/*.f90)

.SUFFIXES:
.SUFFIXES: .f90 .f .o


-include $(DEPEND)

$(DEPEND): $(SRC)
	makedepf90 -o $(EXEC) -r '$(FC) -c -o $$@ $(FFLAGS) $$<' $^ > $(DEPEND)

clean:
	$(RM) $(DEPEND) $(FOBJ) core src/*.mod  wrf2farm.x
